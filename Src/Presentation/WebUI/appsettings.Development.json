{
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Trace"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log.log",
          "outputTemplate": "[{Timestamp}] [{Level:u3}] [{MachineName}] [{Environment}] {Message}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\msqllocaldb;Initial Catalog=Application%GUID%;Trusted_Connection=True;AttachDBFilename=%CONTENTROOTPATH%\\localDatabase.mdf;MultipleActiveResultSets=true"
  }
}
